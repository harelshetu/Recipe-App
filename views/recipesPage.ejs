<%- include ('includes/head.ejs') %>
<%- messages('flash_message', locals) %>
<div class="container">
  <div class="card-deck">
    <% for(let i=0; i <recipes.length;i++){ %>
    <div class="col-4">
      <div class="card" style="width: 20rem; border: 2px solid #ccc;">
        <a href='/recipes/<%=recipes[i].id%>'><img src=<%=recipes[i].image%> class="card-img-top" alt="..."
            height="180px" width="120px"></a>
        <div class="card-body" >
          <% if (recipes[i].title.length > 30) {%>
          <h5 class="card-title"><%=recipes[i].title.substring(0,25)+'...'%> </h5>
          <%} else {%>
          <h5 class="card-title"><%=recipes[i].title%></h5>
          <%}%>
          <% if (recipes[i].description.length > 30) {%>
          <p class="card-text"><%=recipes[i].description.substring(0,30)+'...'%></p>
          <%} else {%>
          <p class="card-text"><%=recipes[i].description%></p>
          <%}%>
                    
                      <!--<button  id ='delete-btn' type="button" class="btn btn-primary btn-sm" style="width:10rem;"
                   onclick="deleteRecipe('<%=recipes[i].id%>')">Delete</button> -->
          <a href="/recipes/edit/<%=recipes[i].id%>"><button id='edit-btn' type="button" class="btn btn-primary ml-5"
              >Edit Recipe</button></a>
        </div>
        <p class="ml-2">By <%=recipes[i].author%></p>
      </div>
    </div>
    <% if(i%3 === 2){%>
    <div class="w-100"></div>
    <br>
    <% } %>

    <% } %>

  </div>
</div>
<script src="javascripts/recipes.js"></script>
</body>

</html>