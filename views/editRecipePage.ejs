<%- include ('includes/head.ejs') %>
<br>
<h1>Edit Recipe</h1>
<div >
<ul >
    <% for(let i=0; i <errors.length;i++){ %>
     <li class="alert alert-danger"><%=errors[i]%></li>
    <% } %>
  </ul>
</div>
<br>
<form id="recipeForm" action = '/recipes/edit/<%=recipeId%>?_method=PUT' method = "POST">
    <div class="form-group col-md-2">
      <label >Author</label>
      <input type="text" class="form-control" name="author" value= <%=requestedRecipe.author%> >
      <small id="emailHelp" class="form-text text-muted"> </small>
    </div>
    <div class="form-group col-md-2">
        <label >Title</label>
        <input type="text" class="form-control" name="title" value=<%=requestedRecipe.title%> >
      </div>
      <div class="form-group col-md-8">
        <label >image</label>
        <input type="text" class="form-control" name="image" value="<%=requestedRecipe.image%>" >
      </div>
      <div class="form-group col-md-8">
            <label>Description</label>
            <textarea class="form-control" name="description" rows="4"><%=requestedRecipe.description%>
            </textarea>
      </div>
    <button type="submit" class="btn btn-primary " style="margin-left: 15px;">Edit Recipe</button>
  </form>
</body>
</html>

